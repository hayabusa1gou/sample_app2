<div class="detail-container">

    

    <img src="<%="/user_images/#{@post.post_image1}"%>">
    <img src="<%="/user_images/#{@post.post_image2}"%>">
    <img src="<%="/user_images/#{@post.post_image3}"%>">
    <%=@post.title%>
    <%=@post.content%>
    <%=@likes_count%>
            



    <%=form_tag("/reviews/#{@post.id}/create") do%>
        <textarea name="content"></textarea>
        <input type="submit" value="投稿">
    <%end%>

</div>

<div class="comment-container">
    <% @reviews.each do |review| %>
      <div>
      <%if review.post_id==@post.id%>
        <%=review.content%>
      <%end%>
      <%# #.id消した %>
      <%if @current_user!=nil%>
        <%if @current_user.id==review.user_id%>
          <p><%=link_to("削除","/reviews/#{@post.id}/destroy")%></p>
        <%end%>


      <%end%>
      </div>
      
    <% end %>




</div>


