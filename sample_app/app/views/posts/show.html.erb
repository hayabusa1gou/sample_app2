<div class="detail-container">

    

    <img src="<%=@post.post_image1%>">
    <img src="<%=@post.post_image2%>">
    <img src="<%=@post.post_image3%>">
    <%=@post.content%>
            



    <%=form_tag("/reviews/#{@post.id}/create") do%>
        <textarea name="content"></textarea>
        <input type="submit" value="投稿">
    <%end%>

</div>

<div class="comment-container">
    <% @reviews.each do |review| %>
      <div>
      <%=review.content%>
      <%if @current_user.id!=nil%>
        <%if @current_user.id==review.user_id%>
          <p><%=link_to("削除","/reviews/#{@post.id}/destroy")%></p>
        <%end%>


      <%end%>
      </div>
      
    <% end %>




</div>


<div class="login_form">
            <%=form_tag("/users/login") do%>
        
                <input class="check-email" name="email"value="メールアドレス">
                <input class="check-password "name="password"value="パスワード">
                <input type="submit">

            <%end %>
        </div>