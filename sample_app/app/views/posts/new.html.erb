<div class="main-container contents new">
    
        <% @posts.each do |post|%>
        
            <div class="content">
                    <div>
                    <img  src="<%="/user_images/#{post.post_image1}"%>" border="1.8" >
                    </div>

                    <div>
                    <%=link_to(post.title,"/posts/#{post.id}")%>
                    </div>
                    

                    <div>
                    <%if @current_user!=nil%>
                        <%if Like.find_by(post_id:post.id,user_id:@current_user.id)%>
                            
                            <%=link_to("好き","/likes/#{post.id}/destroy")%>

                        <%else%>
                            <%=link_to("普通","/likes/#{post.id}/create")%>

                        <%end%>
                    <%else%>
                            <%=link_to("普通","/likes/#{post.id}/create")%>
                    <%end%>

                    </div>

                    

                    

            
            </div>
        <% end %>

</div>

<div class="post_form">
    <%=form_tag("/posts/create",{multipart:true}) do%>
        
        <input name="post_image1" type="file">
        <input name="post_image2" type="file">
        <input name="post_image3" type="file">

        <input name="title"value="<%=@post.title%>">
        <input name="content"value="<%=@post.content%>">
        <input type="submit">





    <%end%>


</div>